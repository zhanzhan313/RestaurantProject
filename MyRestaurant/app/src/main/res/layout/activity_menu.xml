<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_add"
        app:layout_constraintLeft_toRightOf="@+id/fries"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/fries" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="36dp"
        android:layout_height="14dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_remove"
        app:layout_constraintLeft_toRightOf="@+id/editText3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="19dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="0"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/fries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="20dp"
        android:text="fries"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:paddingLeft="25dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/child_food"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/child_food" />


    <TextView
        android:id="@+id/child_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:paddingLeft="20dp"
        android:text="burgers"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/item_img"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/item_add"
        android:layout_width="38dp"
        android:layout_height="15dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_add"
        app:layout_constraintLeft_toRightOf="@+id/child_food"
        android:layout_marginLeft="91dp"
        app:layout_constraintTop_toTopOf="@+id/child_food"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/burger"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/item_remove"
        android:layout_width="36dp"
        android:layout_height="14dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_remove"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="19dp"
        android:layout_height="40dp"
        android:layout_marginLeft="13dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:text="0"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/item_add"
        tools:layout_editor_absoluteY="14dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_img"
        app:srcCompat="@drawable/fries" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="price"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/fries"
        android:layout_marginLeft="-7dp"
        app:layout_constraintLeft_toLeftOf="@+id/fries" />

</android.support.constraint.ConstraintLayout>